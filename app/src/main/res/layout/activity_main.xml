<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:id="@+id/linearLayout">
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/timer" android:layout_weight="1"/>
		<Button
				android:text="@string/click"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/button" android:layout_weight="2"/>
	</LinearLayout>
	<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true" app:srcCompat="@android:drawable/btn_star_big_on" android:id="@+id/floatingActionButton"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>